{
  "name": "@doodlesteam/flooks",
  "version": "0.0.2",
  "description": "Flooks provides React hooks for connecting to the Flow blockchain.",
  "license": "MIT",
  "author": "Doodles",
  "type": "commonjs",
  "keywords": [
    "react",
    "flow",
    "fcl"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Doodles/flooks"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint src test",
    "prettier": "prettier src test --check",
    "test": "jest",
    "clean:build": "rm -rf ./dist",
    "prebuild": "npm run lint && npm run prettier && npm run test && npm run clean:build",
    "build": "tsc --project tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "preversion": "npm install && npm run build",
    "release:major": "npm version major",
    "release:minor": "npm version minor",
    "release:patch": "npm version patch",
    "postversion": "npm publish"
  },
  "devDependencies": {
    "@nx/eslint-plugin": "16.5.3",
    "@onflow/types": "^1.1.0",
    "@testing-library/react": "^14.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/jest": "^29.5.4",
    "@types/react": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@doodlesteam/floo": "^0.0.4",
    "@onflow/fcl": "^1.6.0",
    "@onflow/typedefs": "^1.1.1",
    "@tanstack/react-query": "^4.35.3"
  }
}
